<Template>
  <AccountType>Helpdesk User</AccountType>
  <BaseOU>OU=Helpdesk Users,DC=mojafirma,DC=com</BaseOU>
  <Groups>
    <Group>Helpdesk Team</Group>
    <Group>IT Support</Group>
    <Group>Standard Users</Group>
  </Groups>
  <Fields>
    <!-- POLA EDYTOWALNE -->
    <Field>
      <Name>InputFirstname</Name>
      <Label>Firstname (input)</Label>
      <Editable>true</Editable>
      <LocalVar>true</LocalVar>
    </Field>
    <Field>
      <Name>InputSurname</Name>
      <Label>Surname (input)</Label>
      <Editable>true</Editable>
      <LocalVar>true</LocalVar>
    </Field>
    <Field>
      <Name>HelpdeskLevel</Name>
      <Label>Helpdesk Level</Label>
      <Value>Level 1</Value>
      <Editable>true</Editable>
      <ADAttribute>extensionAttribute20</ADAttribute>
    </Field>

    <!-- POLA WYLICZANE (READ-ONLY) -->
    <Field>
        <Name>FirstName</Name>
        <Label>First Name (AD)</Label>
        <Template>h{InputFirstname} {InputSurname}h</Template>
        <Editable>false</Editable>
        <ADAttribute>givenName</ADAttribute>
    </Field>
    <Field>
        <Name>DisplayName</Name>
        <Label>Display Name</Label>
        <Template>h{InputFirstname} {InputSurname}h</Template>
        <Editable>false</Editable>
        <ADAttribute>displayName</ADAttribute>
    </Field>
    <Field>
        <Name>FullName</Name>
        <Label>Full Name</Label>
        <Template>h{InputFirstname} {InputSurname}h</Template>
        <Editable>false</Editable>
        <ADAttribute>name</ADAttribute>
    </Field>
    <Field>
        <Name>UserLogonName</Name>
        <Label>User Logon Name</Label>
        <Template>hc{InputFirstname[0]}{InputSurname}h@mojafirma.com</Template>
        <Editable>false</Editable>
        <ADAttribute>userPrincipalName</ADAttribute>
    </Field>
    <Field>
        <Name>UserLogonNamePre2000</Name>
        <Label>User Logon Name (Pre 2000)</Label>
        <Template>MOJAFIRMA\h{InputFirstname[0]}{InputSurname}h</Template>
        <Editable>false</Editable>
        <ADAttribute>sAMAccountName</ADAttribute>
    </Field>
    <Field>
        <Name>IsActive</Name>
        <Label>Account Active?</Label>
        <Type>Checkbox</Type>
        <Value>true</Value>
        <Editable>true</Editable>
        <ADAttribute>userAccountControl</ADAttribute>
    </Field>
  </Fields>
</Template>
